<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="TextColorBrush" Color="Blue"></SolidColorBrush>

    <Style x:Key="ControlBaseStyle">
        <Setter Property="Control.BorderBrush" Value="{DynamicResource AppBorderBrush}"></Setter>
        <Setter Property="Control.BorderThickness" Value="5"></Setter>
    </Style>

    <Style TargetType="TextBox" BasedOn="{StaticResource ControlBaseStyle}">
        <Setter Property="Foreground" Value="{DynamicResource TextColorBrush}"></Setter>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource ControlBaseStyle}">
        <Setter Property="Foreground" Value="{DynamicResource TextColorBrush}"></Setter>
    </Style>

</ResourceDictionary>